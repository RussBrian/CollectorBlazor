<MudForm @ref="form">
    <p class="custom-message">
        Ingrese el código enviado a su correo electrónico.
    </p>
    <MudTextField @bind-Value="LocalCode" Variant="Variant.Outlined" Style="color:white;" />
</MudForm>

<style>
    .custom-label {
        font-weight: 700;
        color: #BDBABA;
    }

    .custom-message {
        color: #7B885B;
        font-weight: bold;
        font-size: 1rem;
        margin-top: 1rem;
    }
</style>

@code {
    [Parameter] public EventCallback<string> CodeChanged { get; set; }
    private string LocalCode;
    private MudForm form;

    private async Task OnCodeChanged(string value)
    {
        LocalCode = value;
        await CodeChanged.InvokeAsync(LocalCode);
    }
}
