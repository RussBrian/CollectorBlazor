@inherits ComponentBase;

 <MudForm @ref="form">
    <p class="custom-message">
        Ingrese el código enviado a su correo electrónico.
    </p>
    <MudTextField @bind-Value="Code" Variant="Variant.Outlined" Style="color:white;" />
  </MudForm>

  <style>
    .custom-label {
        font-weight: 700;
        color: #BDBABA;
    }

    .custom-message {
        color: #7B885B;
        font-weight: bold;
        font-size: 1rem;
        margin-top: 1rem;
    }
  </style>

@code {
    [Parameter]
    public int Code { get; set; }
    private MudForm form;
}
