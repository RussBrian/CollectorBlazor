@using Collector.Client.Services.Login
@inject ILoginService LoginService;
@using Microsoft.AspNetCore.Components.Authorization;
@inject NavigationManager navigationManager;
@attribute [StreamRendering]



<div class="top-row bg-dark ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href=""></a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi text-black bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="weather">
                <span class="bi text-black bi-list-nested-nav-menu" aria-hidden="true"></span> Weather
            </NavLink>
        </div>

        <AuthorizeView Roles="Person">
            <Authorized>
                <div class="nav-item px-3">
                    <button class="btn btn-danger" @onclick="LogOutMethod">Log Out</button>
                </div>
            </Authorized>
        </AuthorizeView>
    </nav>
</div>

@code {

    private async Task LogOutMethod()
    {
        await LoginService.Logout(null);
        navigationManager.NavigateTo("/",forceLoad:true);
    }
}
