@inherits ComponentBase;

<MudTooltip Style="background-color:darkgray; color:black"
            Arrow="true" Placement="Placement.Right" Delay="400">
    <ChildContent>
        <MudIcon Icon="@Icons.Material.Filled.ErrorOutline"
                 Size="Size.Small" Style="@ToolTipStyle" />
    </ChildContent>
    <TooltipContent>
        <MudText Style="@ToolTipTextStyle">@ToolTipDescription</MudText>
    </TooltipContent>
</MudTooltip>

@code {
    [Parameter] public string? ToolTipDescription { get; set; }
    [Parameter] public string? ToolTipStyle { get; set; }
    [Parameter] public string? ToolTipTextStyle { get; set; }

    protected override Task OnInitializedAsync()
    {
        return base.OnInitializedAsync();
    }
}